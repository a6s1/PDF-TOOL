<UserControl x:Class="PDFToolsPro.Views.CompressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDFToolsPro.Views"
             xmlns:vm="clr-namespace:PDFToolsPro.ViewModels"
             xmlns:models="clr-namespace:PDFToolsPro.Models"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             AllowDrop="True" Drop="OnFileDrop">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">
        <StackPanel Margin="0,0,0,30">
            <!-- Header -->
            <TextBlock Text="{Binding Loc.Compress}" FontSize="28" FontWeight="Bold" 
                       Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Loc.CompressDescription}" FontSize="14" 
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,25"/>

            <!-- Drop Zone -->
            <Border Style="{StaticResource DropZone}" Margin="0,0,0,20"
                    Cursor="Hand"
                    MouseLeftButtonUp="OnDropZoneClick">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="FileUpload" Width="48" Height="48" 
                                             Foreground="{StaticResource SecondaryBrush}"
                                             HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Loc.DragFilesHere}" FontSize="16" 
                               Foreground="{StaticResource TextBrush}" Margin="0,15,0,5"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Loc.Or}" FontSize="13" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    <Button Content="{Binding Loc.SelectFiles}" Style="{StaticResource SecondaryButton}"
                            Command="{Binding SelectFilesCommand}" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- File List -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20"
                    Visibility="{Binding Files.Count, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Loc.SelectedFiles}" FontWeight="SemiBold" FontSize="14"
                                       Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text=" (" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding Files.Count}" Foreground="{StaticResource SecondaryBrush}" FontWeight="Bold"/>
                            <TextBlock Text=")" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <Button Content="{Binding Loc.Clear}" Style="{StaticResource SecondaryButton}"
                                Command="{Binding ClearFilesCommand}" HorizontalAlignment="Right"
                                Padding="12,6"/>
                    </Grid>
                    <!-- File list without nested ScrollViewer - limited to 5 items visible -->
                    <ItemsControl ItemsSource="{Binding Files}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource FileListItem}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Kind="FilePdfBox" Width="24" Height="24" 
                                                                 Foreground="{StaticResource AccentBrush}"
                                                                 VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Margin="12,0">
                                            <TextBlock Text="{Binding FileName}" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding FileSizeFormatted}" FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding FileSizeFormatted}" 
                                                   VerticalAlignment="Center" Margin="10,0"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <Button Grid.Column="3" Style="{StaticResource SecondaryButton}"
                                                Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" Padding="8,4">
                                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Compression Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{Binding Loc.CompressionQuality}" FontWeight="SemiBold" FontSize="14"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,15"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="{Binding Loc.High}" Style="{StaticResource ModernRadioButton}"
                                     IsChecked="{Binding SelectedLevel, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=High}"
                                     Margin="0,0,30,0"/>
                        <RadioButton Content="{Binding Loc.Medium}" Style="{StaticResource ModernRadioButton}"
                                     IsChecked="{Binding SelectedLevel, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Medium}"
                                     Margin="0,0,30,0"/>
                        <RadioButton Content="{Binding Loc.Low}" Style="{StaticResource ModernRadioButton}"
                                     IsChecked="{Binding SelectedLevel, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Low}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Output Folder Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20"
                    Visibility="{Binding Files.Count, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding Loc.OutputFolder}" FontWeight="SemiBold" FontSize="14"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,15"/>
                    
                    <CheckBox Content="{Binding Loc.SaveInSameFolder}" Style="{StaticResource ModernCheckBox}"
                              IsChecked="{Binding SaveInSameFolder}" Margin="0,0,0,10"/>
                    
                    <Grid Visibility="{Binding SaveInSameFolder, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding OutputFolder}" IsReadOnly="True" 
                                 Padding="10" Margin="0,0,10,0"
                                 Style="{StaticResource ModernTextBox}"/>
                        <Button Grid.Column="1" Content="{Binding Loc.Browse}" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding BrowseOutputFolderCommand}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Progress -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20"
                    Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding StatusMessage}" FontWeight="Medium" Margin="0,0,0,10"
                               TextWrapping="Wrap"/>
                    <ProgressBar Value="{Binding Progress}" Maximum="100" Height="10"
                                 Style="{StaticResource ModernProgressBar}"/>
                    <TextBlock Text="{Binding Progress, StringFormat={}{0}%}" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Success Message -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20" Background="#E8F5E9"
                    Visibility="{Binding ShowSuccessMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold" FontSize="14"
                               Foreground="#2E7D32" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Results -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20"
                    Visibility="{Binding ShowSuccessMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Loc.OriginalSize}" FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding OriginalSize}" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Loc.NewSize}" FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding NewSize}" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Loc.Reduction}" FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ReductionPercentage}" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource SecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Execute Button -->
            <Grid Margin="0,0,0,20">
                <Button Content="{Binding Loc.Execute}" Style="{StaticResource PrimaryButton}"
                        Command="{Binding ExecuteCompressCommand}" HorizontalAlignment="Center"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                <Button Content="{Binding Loc.Cancel}" Style="{StaticResource SecondaryButton}"
                        Command="{Binding CancelOperationCommand}" HorizontalAlignment="Center"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
