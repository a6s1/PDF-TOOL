<UserControl x:Class="PDFToolsPro.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDFToolsPro.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
            <!-- Logo -->
            <Border Width="100" Height="100" CornerRadius="20" Margin="0,0,0,30"
                    Background="{StaticResource SidebarGradient}">
                <materialDesign:PackIcon Kind="FilePdfBox" Width="50" Height="50" 
                                         Foreground="White" HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
            </Border>

            <!-- App Name -->
            <TextBlock Text="{Binding AppName}" FontSize="32" FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
            
            <!-- Version -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="{Binding Loc.Version}" FontSize="14" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text=" " />
                <TextBlock Text="{Binding Version}" FontSize="14" 
                           Foreground="{StaticResource SecondaryBrush}" FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Description -->
            <Border Style="{StaticResource CardStyle}" Margin="0,30,0,0">
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="14"
                           Foreground="{StaticResource TextBrush}" TextAlignment="Center"
                           LineHeight="24"/>
            </Border>

            <!-- Features -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Features" FontWeight="SemiBold" FontSize="16"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,15"
                               HorizontalAlignment="Center"/>
                    <ItemsControl ItemsSource="{Binding Features}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <materialDesign:PackIcon Kind="Check" Width="18" Height="18"
                                                             Foreground="{StaticResource SuccessBrush}"
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding}" Margin="10,0,0,0" FontSize="14"
                                               Foreground="{StaticResource TextBrush}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Developer Info -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0" 
                    Background="{StaticResource SidebarGradient}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Loc.DeveloperInfo}" FontSize="14" 
                               Foreground="#B8C5D6" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding DeveloperName}" FontSize="20" FontWeight="Bold"
                               Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Copyright -->
            <TextBlock Text="{Binding Copyright}" FontSize="12" 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,30,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>






