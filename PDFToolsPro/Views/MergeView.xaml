<UserControl x:Class="PDFToolsPro.Views.MergeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDFToolsPro.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             AllowDrop="True" Drop="OnFileDrop">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="{Binding Loc.Merge}" FontSize="28" FontWeight="Bold" 
                       Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Loc.MergeDescription}" FontSize="14" 
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,25"/>

            <!-- Drop Zone -->
            <Border Style="{StaticResource DropZone}" Margin="0,0,0,20"
                    Cursor="Hand"
                    MouseLeftButtonUp="OnDropZoneClick">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="CallMerge" Width="48" Height="48" 
                                             Foreground="{StaticResource SecondaryBrush}"
                                             HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Loc.DragFilesHere}" FontSize="16" 
                               Foreground="{StaticResource TextBrush}" Margin="0,15,0,5"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Loc.Or}" FontSize="13" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    <Button Content="{Binding Loc.SelectFiles}" Style="{StaticResource SecondaryButton}"
                            Command="{Binding SelectFilesCommand}" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- File List with Reorder -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20"
                    Visibility="{Binding Files.Count, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="{Binding Loc.SelectedFiles}" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource TextBrush}"/>
                        <Button Content="{Binding Loc.Clear}" Style="{StaticResource SecondaryButton}"
                                Command="{Binding ClearFilesCommand}" HorizontalAlignment="Right"
                                Padding="12,6"/>
                    </Grid>
                    <ItemsControl ItemsSource="{Binding Files}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource FileListItem}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Reorder Buttons -->
                                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
                                            <Button Style="{StaticResource SecondaryButton}" Padding="4"
                                                    Command="{Binding DataContext.MoveUpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="ChevronUp" Width="14" Height="14"/>
                                            </Button>
                                            <Button Style="{StaticResource SecondaryButton}" Padding="4" Margin="0,2,0,0"
                                                    Command="{Binding DataContext.MoveDownCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="ChevronDown" Width="14" Height="14"/>
                                            </Button>
                                        </StackPanel>

                                        <materialDesign:PackIcon Grid.Column="1" Kind="FilePdfBox" Width="24" Height="24" 
                                                                 Foreground="{StaticResource AccentBrush}"
                                                                 VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="2" Margin="12,0">
                                            <TextBlock Text="{Binding FileName}" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding FileSizeFormatted}" FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="3" Text="{Binding FileSizeFormatted}" 
                                                   VerticalAlignment="Center" Margin="10,0"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <Button Grid.Column="5" Style="{StaticResource SecondaryButton}"
                                                Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" Padding="8,4">
                                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Options -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <CheckBox Content="{Binding Loc.Compress}" Style="{StaticResource ModernCheckBox}"
                              IsChecked="{Binding CompressAfterMerge}" Margin="0,0,0,15"/>
                    
                    <!-- Compression Quality Options -->
                    <StackPanel Visibility="{Binding CompressAfterMerge, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding Loc.CompressionQuality}" FontWeight="Medium" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="{Binding Loc.High}" Style="{StaticResource ModernRadioButton}"
                                         IsChecked="{Binding CompressionLevel, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=High}"
                                         Margin="0,0,30,0"/>
                            <RadioButton Content="{Binding Loc.Medium}" Style="{StaticResource ModernRadioButton}"
                                         IsChecked="{Binding CompressionLevel, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Medium}"
                                         Margin="0,0,30,0"/>
                            <RadioButton Content="{Binding Loc.Low}" Style="{StaticResource ModernRadioButton}"
                                         IsChecked="{Binding CompressionLevel, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Low}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Progress -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20"
                    Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding StatusMessage}" FontWeight="Medium" Margin="0,0,0,10"/>
                    <ProgressBar Value="{Binding Progress}" Maximum="100" Height="10"
                                 Style="{StaticResource ModernProgressBar}"/>
                </StackPanel>
            </Border>

            <!-- Success Message -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20" Background="#E8F5E9"
                    Visibility="{Binding ShowSuccessMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold" FontSize="14"
                               Foreground="#2E7D32" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Execute Button -->
            <Grid>
                <Button Content="{Binding Loc.Execute}" Style="{StaticResource PrimaryButton}"
                        Command="{Binding ExecuteMergeCommand}" HorizontalAlignment="Center"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                <Button Content="{Binding Loc.Cancel}" Style="{StaticResource SecondaryButton}"
                        Command="{Binding CancelOperationCommand}" HorizontalAlignment="Center"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>

